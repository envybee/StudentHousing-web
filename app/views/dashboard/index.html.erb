<head>
	<%= render 'shared/common_dash_head' %>
	<!-- DataTables CSS -->
	<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.5/css/jquery.dataTables.css">
	<style>
		a:hover {
			text-decoration: none;
		}
		#container {
			padding-top: 10px;
			padding-left: 40px;
			padding-right: 30px;
		}
		table.dataTable thead th, table.dataTable thead td {
			border-bottom: 2px solid #DDD;
		}
		table.dataTable.no-footer {
			border-bottom: 0px;
		}
	</style>
</head>
<body>
	<%= render 'shared/common_dash_nav' %>
	<div id="container" class="col-sm-9 col-md-10">
		<h1><%= current_user.first_name %>'s Listings</h1>
		</br>
		<% if @my_listings.length != 0 %>
			<table id="entry_listings" class="table table-striped table-hover display">
				<thead>
					<tr>
						<th>
							Name
						</th>
						<th>
							Description
						</th>
						<th>
							Location
						</th>
						<th>
							Price
						</th>
						<th>
							Rating
						</th>
						<th>
							Address
						</th>
						<th>
						</th>
					</tr>
				</thead>
				<tbody>
					<% @my_listings.each do |l| %>
					<tr>
						<td><%= l.name %></td>
						<td><%= l.description %></td>
						<td><%= l.location %></td>
						<td>$<%= l.price %></td>
						<td><%= l.overall_rating %></td>
						<td><%= l.address %></td>
						<td><a href="../housing_listing/edit/<%=l.id%>" class="btn-sm btn-primary" role="button">Edit</a></td>
					</tr>
					<%end%>
				</tbody>
			</table>
		<% else %>
			<p>No results found. Post your first entry by clicking on "Post New Place."</P>
		<% end %>
	</div>
</body>
<%= render 'shared/common_dash_scripts' %>
<!-- DataTables -->
<script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.5/js/jquery.dataTables.js"></script>
<script>
	$(document).ready(function() {
		$("#entry_listings").DataTable();
	});
</script>