<script type="text/javascript">
	$("#sign_in_btn").on("click", function(e) {
		e.preventDefault();

		$("#login_modal").modal("show");
	});

	
    $("#register_btn").on("click", function(e) {
    	e.preventDefault(); 

    	$("#login_modal").modal("hide");
    	$("#register_modal").modal("show");
    });

</script>